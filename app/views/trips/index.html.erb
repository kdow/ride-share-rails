<h1>Trips</h1>

<ul>
  <% @trips.each do |trip| %>
    <% driver = Driver.find(trip.driver_id) %>
    <% passenger = Passenger.find(trip.passenger_id) %>
    <li>
      <%= link_to "#{trip.id}", trip_path(trip.id) %>
      <%= trip.date %>
      <%= link_to "#{driver.name}", driver_path(driver.id) %>
      <%= link_to "#{passenger.name}", passenger_path(passenger.id) %>
      <%= trip.cost %>
      <%= trip.rating %>
      <%= link_to "Edit", edit_trip_path(trip.id) %>
      <%= link_to "Delete", trip_path(trip.id), method: :delete, data: { confirm: "Are you sure you want to delete this trip?"} %>
    </li>
  <% end %>
</ul>
