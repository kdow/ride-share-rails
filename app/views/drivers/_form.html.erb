<% if @driver.errors.messages.any? %>
  <section>
  There were some issues with your submission.

    <ul>
      <% @driver.errors.messages.each do |column, problem_list| %>
        <% problem_list.each do |problem| %>
          <li>
            <%= column %>: <%= problem %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @driver do |f| %>
  
  <%= f.label :name, "Driver Name" %>
  <%= f.text_field :name %>

  <%= f.label :vin, "VIN" %>
  <%= f.text_field :vin %>

  <%= f.submit action_name %>
<% end %>