<h2> <%= @driver.name %> <h2>

<%= link_to "Edit", edit_driver_path(@driver.id) %>
<%= link_to "Delete", driver_path(@driver.id), method: :delete, data: { confirm: "Are you sure you want to delete this driver?"} %>

<p> VIN: <%= @driver.vin %> </p>

<table>
  <tr>
    <th>ID</th>
    <th>Date</th>
    <th>Passenger</th>
    <th>Price</th>
    <th>Rating</th>
    <th>Delete</th>
    <th>Edit</th>
  </tr>
  <% @driver.trips.each do |trip| %>
    <% if trip.passenger_id %>
      <% passenger = Passenger.find(trip.passenger_id) %>
    <% end %>
    <tr>
      <td><%= trip.id %></td>
      <td><%= trip.date %></td>
      <% if trip.passenger_id %>
        <td><%= link_to "#{passenger.name}", passenger_path(passenger.id) %></td>
      <% else %>
        <td>Passenger no longer exists</td>
      <% end %>
      <td><%= "$""#{'%.2f'% (trip.cost / 100.00)}" %></td>
      <td><%= trip.rating %></td>
      <td>Delete</td>
      <td>Edit</td>
    </tr>
  <% end %>
</table>