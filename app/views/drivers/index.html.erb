<h1>Drivers</h1>

<table>

  <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>

  <% @drivers.each do |driver| %>
    <tr>
      <td><%= link_to "#{driver.id}", driver_path(driver.id) %></td>
      <td><%= link_to "#{driver.name}", driver_path(driver.id) %></td>
      <td class="edit"><%= link_to "Edit", edit_driver_path(driver.id) %></td>
      <td class="delete"><%= link_to "Delete", driver_path(driver.id), method: :delete, data: { confirm: "Are you sure you want to delete this driver?"} %></td>
    </tr>
  <% end %>
</table>