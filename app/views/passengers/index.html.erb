<h1>Passengers</h1>

<table>

  <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>

  <% @passengers.each do |passenger| %>
    <tr>
      <td><%= passenger.id %></td>
      <td><%= link_to "#{passenger.name}", passenger_path(passenger.id) %></td>
      <td class="edit"><%= link_to "Edit Passenger", edit_passenger_path(passenger.id) %></td>
      <td class="delete"><%= link_to "Delete Passenger", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete this passenger?"} %></td>
    </tr>
  <% end %>
</table>